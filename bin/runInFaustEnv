#!/bin/bash
CMD=$*

export PATH="/opt/android/ndk:/opt/android/sdk/platform-tools:/opt/android/sdk/tools:/opt/local/libexec/qt5/bin:/opt/local/bin:/opt/local/sbin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"

export ANDROID_ROOT=/opt/android
export ANDROID_SDK_ROOT=/opt/android/sdk
export ANDROID_NDK_ROOT=/opt/android/ndk
export ANDROID_HOME=/opt/android/sdk
